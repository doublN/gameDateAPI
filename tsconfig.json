{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowUmdGlobalAccess": true,
    "types": ["node", "jest", "jest-extended"]
  },
  "files": ["node_modules/jest-extended/types/index.d.ts"],
  "ts-node": {
    "esm": true,
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  },
  "exclude": ["node_modules", "./*.ts", "src/__test__"]
}
